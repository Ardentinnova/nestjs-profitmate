generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id           String   @id
  name         String
  email        String
  businessName String   @default("Toko saya")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  periodes        Periode[]
  transactions    Transaction[]
  sellingCosts    SellingCost[]
  productionCosts ProductionCost[]
}

model Periode {
  id        String    @id @default(uuid())
  name      String
  userId    String
  startDate DateTime
  endDate   DateTime?
  createdAt DateTime  @default(now())

  profiles        Profile          @relation(fields: [userId], references: [id])
  transactions    Transaction[]
  productionCosts ProductionCost[]
  sellingCosts    SellingCost[]
}

model Transaction {
  id                String           @id @default(uuid())
  name              String
  amount            BigInt
  periodId        String
  userId            String
  type              TransactionType
  expenseCategories ExpenseCategory?
  createdAt         DateTime         @default(now())

  periode Periode @relation(fields: [periodId], references: [id])
  profile Profile @relation(fields: [userId], references: [id])
}

model ProductionCost {
  id         String             @id @default(uuid())
  userId     String
  periodesId String
  name       String
  amount     BigInt
  category   ProductionCategory
  createdAt  DateTime           @default(now())

  periode Periode @relation(fields: [periodesId], references: [id])
  profile Profile @relation(fields: [userId], references: [id])
}

model SellingCost {
  id               String @id @default(uuid())
  userId           String
  periodesId       String
  productCount     Int
  profitMargin     Float
  initialInventory BigInt
  endingInventory  BigInt

  profile Profile @relation(fields: [userId], references: [id])
  periode Periode @relation(fields: [periodesId], references: [id])
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum ExpenseCategory {
  OPERATIONAL
  OTHER
}

enum ProductionCategory {
  OVERHEAD
  INGRIDIENTS
  LABOR
}
